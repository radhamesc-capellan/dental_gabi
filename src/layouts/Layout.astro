    <div id="mobile-menu" class="lg:hidden fixed top-0 right-0 h-full w-80 max-w-[85vw] z-50 transform translate-x-full transition-transform duration-300 ease-out">
      <div class="h-full bg-white/10 backdrop-blur-xl border-l border-white/20 shadow-2xl">
        <!-- Header del menú móvil -->
        <div class="flex items-center justify-between p-6 border-b border-white/10">
          <div class="flex items-center gap-2">
