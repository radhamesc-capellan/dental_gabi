---
// Layout base para el consultorio odontológico RehabiDent
import '../styles/global.css';

// Props para SEO dinámico
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: string;
}

const {
  title = "RehabiDent - Consultorio Odontológico en Lima, Perú | Especialistas en Rehabilitación Oral",
  description = "RehabiDent: Consultorio odontológico especializado en rehabilitación oral, implantes dentales, estética dental y ortodoncia en Lima, Perú. Tecnología avanzada y atención personalizada.",
  keywords = "odontólogo lima, rehabilitación oral, implantes dentales, estética dental, ortodoncia, endodoncia, cirugía oral, odontopediatría, consultorio dental lima, dentista miraflores",
  image = "/og-image.jpg",
  url = "https://RehabiDent.pe",
  type = "website"
} = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="RehabiDent" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={url} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="RehabiDent" />
    <meta property="og:locale" content="es_PE" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Favicon y App Icons -->
    <link rel="icon" type="image/png" href="/RehabiDent_logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Preconnect para performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Dentist",
      "name": "RehabiDent",
      "description": "Consultorio odontológico especializado en rehabilitación oral, implantes dentales y estética dental en Lima, Perú",
      "url": "https://RehabiDent.pe",
      "logo": "https://RehabiDent.pe/logo.png",
      "image": "https://RehabiDent.pe/og-image.jpg",
      "telephone": "+51-1-234-5678",
      "email": "contacto@RehabiDent.pe",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Av. Arequipa 1234",
        "addressLocality": "Miraflores",
        "addressRegion": "Lima",
        "addressCountry": "PE",
        "postalCode": "15074"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -12.0464,
        "longitude": -77.0428
      },
      "openingHours": [
        "Mo-Fr 08:00-20:00",
        "Sa 08:00-18:00",
        "Su 09:00-14:00"
      ],
      "priceRange": "$$",
      "paymentAccepted": ["Cash", "Credit Card", "Debit Card"],
      "currenciesAccepted": "PEN",
      "medicalSpecialty": ["Dentistry", "Oral Surgery", "Orthodontics"],
      "availableService": [
        {
          "@type": "MedicalProcedure",
          "name": "Implantes Dentales"
        },
        {
          "@type": "MedicalProcedure", 
          "name": "Ortodoncia"
        },
        {
          "@type": "MedicalProcedure",
          "name": "Estética Dental"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/RehabiDent",
        "https://www.instagram.com/RehabiDent",
        "https://www.linkedin.com/company/RehabiDent"
      ]
    }
    </script>
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "RehabiDent",
      "description": "Consultorio odontológico en Lima especializado en rehabilitación oral",
      "url": "https://RehabiDent.pe",
      "telephone": "+51-1-234-5678",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Av. Arequipa 1234",
        "addressLocality": "Miraflores", 
        "addressRegion": "Lima",
        "addressCountry": "PE"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -12.0464,
        "longitude": -77.0428
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "20:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Sunday",
          "opens": "09:00",
          "closes": "14:00"
        }
      ]
    }
    </script>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-cyan-100 min-h-screen text-gray-800 font-sans">
    <header class="bg-white/80 backdrop-blur shadow-md sticky top-0 z-50 animate-slide-in-top">
      <nav class="container mx-auto flex items-center justify-between py-4 px-4">
        <div class="flex items-center gap-2">
          <img src="/RehabiDent_logo.png" alt="Logo RehabiDent" class="w-8 h-8" />
          <span class="text-lg sm:text-xl font-bold text-cyan-700">Rehabi<span class="text-lg sm:text-xl font-bold text-black">Dent</span></span>
        </div>
        
        <!-- Menú de escritorio -->
        <ul class="hidden lg:flex gap-6 text-base font-medium">
          <li><a href="/" class="hover:text-cyan-700 transition hover-lift">Inicio</a></li>
          <li><a href="/nosotros" class="hover:text-cyan-700 transition hover-lift">Nosotros</a></li>
          <li><a href="/servicios" class="hover:text-cyan-700 transition hover-lift">Servicios</a></li>
          <li><a href="/equipo" class="hover:text-cyan-700 transition hover-lift">Equipo</a></li>
          <li><a href="/contacto" class="hover:text-cyan-700 transition hover-lift">Contacto</a></li>
        </ul>
        
        <!-- Botón menú móvil -->
        <button id="mobile-menu-btn" class="lg:hidden text-cyan-700 hover:text-cyan-800 focus-ring p-2 rounded-lg hover:bg-white/50 transition-all duration-300" aria-label="Abrir menú de navegación">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>
    </header>
    
    <!-- Overlay para el menú móvil -->
    <div id="mobile-overlay" class="lg:hidden fixed inset-0 bg-black/20 backdrop-blur-sm z-40 hidden transition-all duration-300"></div>
    
    <!-- Menú móvil con estilo glassmorphism -->
    <div id="mobile-menu" class="lg:hidden fixed top-0 right-0 h-full w-80 max-w-[85vw] z-50 transform translate-x-full transition-transform duration-300 ease-out">
      <div class="h-full bg-white/10 backdrop-blur-xl border-l border-white/20 shadow-2xl">
        <!-- Header del menú móvil -->
        <div class="flex items-center justify-between p-6 border-b border-white/10">
          <div class="flex items-center gap-2">
            <img src="/RehabiDent_logo.png" alt="Logo RehabiDent" class="w-8 h-8" />
            <span class="text-xl font-bold text-cyan-700">RehabiDent</span>
          </div>
          <button id="mobile-close-btn" class="text-cyan-700 hover:text-cyan-800 focus-ring p-2 rounded-full hover:bg-white/20 transition-all duration-300" aria-label="Cerrar menú de navegación">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        
        <!-- Enlaces del menú -->
        <nav class="p-6">
          <ul class="space-y-4">
            <li>
              <a href="/" class="flex items-center px-4 py-3 text-lg font-medium text-gray-800 hover:text-cyan-700 hover:bg-white/20 rounded-xl transition-all duration-300 group">
                <span class="mr-3 text-cyan-600 group-hover:scale-110 transition-transform duration-300">🏠</span>
                Inicio
              </a>
            </li>
            <li>
              <a href="/nosotros" class="flex items-center px-4 py-3 text-lg font-medium text-gray-800 hover:text-cyan-700 hover:bg-white/20 rounded-xl transition-all duration-300 group">
                <span class="mr-3 text-cyan-600 group-hover:scale-110 transition-transform duration-300">👥</span>
                Nosotros
              </a>
            </li>
            <li>
              <a href="/servicios" class="flex items-center px-4 py-3 text-lg font-medium text-gray-800 hover:text-cyan-700 hover:bg-white/20 rounded-xl transition-all duration-300 group">
                <span class="mr-3 text-cyan-600 group-hover:scale-110 transition-transform duration-300">🦷</span>
                Servicios
              </a>
            </li>
            <li>
              <a href="/equipo" class="flex items-center px-4 py-3 text-lg font-medium text-gray-800 hover:text-cyan-700 hover:bg-white/20 rounded-xl transition-all duration-300 group">
                <span class="mr-3 text-cyan-600 group-hover:scale-110 transition-transform duration-300">👨‍⚕️</span>
                Equipo
              </a>
            </li>
            <li>
              <a href="/contacto" class="flex items-center px-4 py-3 text-lg font-medium text-gray-800 hover:text-cyan-700 hover:bg-white/20 rounded-xl transition-all duration-300 group">
                <span class="mr-3 text-cyan-600 group-hover:scale-110 transition-transform duration-300">📞</span>
                Contacto
              </a>
            </li>
          </ul>
        </nav>
        
        <!-- Footer del menú móvil -->
        <div class="absolute bottom-0 left-0 right-0 p-6 border-t border-white/10">
          <div class="text-center">
            <p class="text-sm text-gray-600 mb-2">¿Necesitas ayuda?</p>
            <a href="tel:+5112345678" class="inline-flex items-center px-4 py-2 bg-cyan-700 text-white rounded-lg font-medium hover:bg-cyan-800 transition-all duration-300 hover-lift">
              <span class="mr-2">📞</span>
              Llamar Ahora
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-cyan-700 text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">RehabiDent</h3>
            <p class="text-sm text-cyan-100">Tu sonrisa, nuestra pasión. Consultorio odontológico especializado en rehabilitación oral comprometido con tu salud bucal.</p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Servicios</h4>
            <ul class="text-sm text-cyan-100 space-y-2">
              <li><a href="/servicios" class="hover:text-white transition">Rehabilitación Oral</a></li>
              <li><a href="/servicios" class="hover:text-white transition">Implantes Dentales</a></li>
              <li><a href="/servicios" class="hover:text-white transition">Estética Dental</a></li>
              <li><a href="/servicios" class="hover:text-white transition">Ortodoncia</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Contacto</h4>
            <ul class="text-sm text-cyan-100 space-y-2">
              <li>Av. Arequipa 1234, Miraflores</li>
              <li>Lima, Perú</li>
              <li>Tel: (01) 234-5678</li>
              <li>Email: contacto@RehabiDent.pe</li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Horarios</h4>
            <ul class="text-sm text-cyan-100 space-y-2">
              <li>Lun - Vie: 8:00 AM - 8:00 PM</li>
              <li>Sábados: 8:00 AM - 6:00 PM</li>
              <li>Domingos: 9:00 AM - 2:00 PM</li>
              <li>Emergencias: 24/7</li>
            </ul>
          </div>
        </div>
        <div class="border-t border-cyan-600 mt-8 pt-8 text-center text-sm text-cyan-100">
          &copy; {new Date().getFullYear()} <span class="font-bold text-white">Radhames<span class="font-bold text-black"> Capellan</span></span> Todos los derechos reservados. Lima, Perú.
        </div>
      </div>
    </footer>
    
    <script src="../scripts/main.js"></script>
  </body>
</html> 