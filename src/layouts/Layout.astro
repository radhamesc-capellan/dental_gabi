---
// Layout base para el consultorio odontológico RehabiDent
import '../styles/global.css';

// Props para SEO dinámico
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: string;
}

const {
  title = "RehabiDent - Consultorio Odontológico en Lima, Perú | Especialistas en Rehabilitación Oral",
  description = "RehabiDent: Consultorio odontológico especializado en rehabilitación oral, implantes dentales, estética dental y ortodoncia en Lima, Perú. Tecnología avanzada y atención personalizada.",
  keywords = "odontólogo lima, rehabilitación oral, implantes dentales, estética dental, ortodoncia, endodoncia, cirugía oral, odontopediatría, consultorio dental lima, dentista miraflores",
  image = "/og-image.jpg",
  url = "https://RehabiDent.pe",
  type = "website"
} = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="RehabiDent" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={url} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="RehabiDent" />
    <meta property="og:locale" content="es_PE" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Favicon y App Icons -->
    <link rel="icon" type="image/png" href="/RehabiDent_logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Preconnect para performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Dentist",
      "name": "RehabiDent",
      "description": "Consultorio odontológico especializado en rehabilitación oral, implantes dentales y estética dental en Lima, Perú",
      "url": "https://RehabiDent.pe",
      "logo": "https://RehabiDent.pe/logo.png",
      "image": "https://RehabiDent.pe/og-image.jpg",
      "telephone": "+51-1-234-5678",
      "email": "contacto@RehabiDent.pe",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Av. Arequipa 1234",
        "addressLocality": "Miraflores",
        "addressRegion": "Lima",
        "addressCountry": "PE",
        "postalCode": "15074"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -12.0464,
        "longitude": -77.0428
      },
      "openingHours": [
        "Mo-Fr 08:00-20:00",
        "Sa 08:00-18:00",
        "Su 09:00-14:00"
      ],
      "priceRange": "$$",
      "paymentAccepted": ["Cash", "Credit Card", "Debit Card"],
      "currenciesAccepted": "PEN",
      "medicalSpecialty": ["Dentistry", "Oral Surgery", "Orthodontics"],
      "availableService": [
        {
          "@type": "MedicalProcedure",
          "name": "Implantes Dentales"
        },
        {
          "@type": "MedicalProcedure", 
          "name": "Ortodoncia"
        },
        {
          "@type": "MedicalProcedure",
          "name": "Estética Dental"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/RehabiDent",
        "https://www.instagram.com/RehabiDent",
        "https://www.linkedin.com/company/RehabiDent"
      ]
    }
    </script>
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "RehabiDent",
      "description": "Consultorio odontológico en Lima especializado en rehabilitación oral",
      "url": "https://RehabiDent.pe",
      "telephone": "+51-1-234-5678",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Av. Arequipa 1234",
        "addressLocality": "Miraflores", 
        "addressRegion": "Lima",
        "addressCountry": "PE"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -12.0464,
        "longitude": -77.0428
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "20:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Sunday",
          "opens": "09:00",
          "closes": "14:00"
        }
      ]
    }
    </script>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-cyan-100 min-h-screen text-gray-800 font-sans">
    <header class="bg-white/80 backdrop-blur shadow-md sticky top-0 z-50 animate-slide-in-top">
      <nav class="container mx-auto flex items-center justify-between py-4 px-4">
        <div class="flex items-center gap-2">
          <img src="/RehabiDent_logo.png" alt="Logo RehabiDent" class="w-8 h-8" />
          <span class="text-lg sm:text-xl font-bold text-cyan-700">Rehabi<span class="text-lg sm:text-xl font-bold text-black">Dent</span></span>
        </div>
        
        <!-- Menú de escritorio -->
        <ul class="hidden lg:flex gap-6 text-base font-medium">
          <li><a href="/" class="hover:text-cyan-700 transition hover-lift">Inicio</a></li>
          <li><a href="/nosotros" class="hover:text-cyan-700 transition hover-lift">Nosotros</a></li>
          <li><a href="/servicios" class="hover:text-cyan-700 transition hover-lift">Servicios</a></li>
          <li><a href="/equipo" class="hover:text-cyan-700 transition hover-lift">Equipo</a></li>
